#!/usr/bin/env python
'''TimeRasp command
2014 Mendez
'''
import sys
from timerasp import cam

PREVIEW = ('preview' in sys.argv)


def timelapse():
    with cam.Camera(preview=PREVIEW) as c:
        for image in c.smoothcap():
            print type(image)




if __name__ == '__main__':
    from pysurvey.util import setup_stop
    setup_stop()
    
    timelapse()