#!/usr/bin/env python
'''TimeRasp command
2014 Mendez
'''
import sys
from timerasp import camera

PREVIEW = ('preview' in sys.argv)


def timelapse():
    with camera.Camera(preview=PREVIEW) as cam:
        for image in cam.smoothcap():
            print type(image)




if __name__ == '__main__':
    timelapse()